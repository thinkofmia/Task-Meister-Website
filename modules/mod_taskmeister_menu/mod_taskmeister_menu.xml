<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Custom Menu (Task Meister)</name>
    <author>Fremont Teng</author>
    <version>1.0.0</version>
    <description>A custom menu module for Task Meister.</description>
    <files>
        <filename>mod_taskmeister_menu.xml</filename>
        <filename module="mod_taskmeister_menu">mod_taskmeister_menu.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
				<field
					name="website"
					placeholder="taskmeisterx"
					type="textarea"
					label="Website"
					description="Place website title here. Default: taskmeisterx"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customtext"
					type="textarea"
					label="Custom Text"
					description="Input your custom text here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customheader"
					type="textarea"
					label="Custom Header"
					description="Input your custom header here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customLabel1"
					type="textarea"
					label="Custom Label 1"
					description="Input your custom label 1 here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customAlias1"
					type="textarea"
					label="Custom Alias 1"
					description="Input your custom alias 1 here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customLabel2"
					type="textarea"
					label="Custom Label 2"
					description="Input your custom label 2 here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customAlias2"
					type="textarea"
					label="Custom Alias 2"
					description="Input your custom alias 2 here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
				<field
					name="customLabel3"
					type="textarea"
					label="Custom Label 3"
					description="Input your custom label 3 here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customAlias3"
					type="textarea"
					label="Custom Alias 3"
					description="Input your custom alias 3 here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
            </fieldset>
        </fields>
    </config>
</extension>
