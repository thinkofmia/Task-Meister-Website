<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Your Class Stats Module (Task Meister)</name>
    <author>Fremont Teng</author>
    <version>1.0.0</version>
    <description>A module for Task Meister, to display the pie stats of the your class.</description>
    <files>
        <filename>mod_taskmeister_yourclassstats.xml</filename>
        <filename module="mod_taskmeister_yourclassstats">mod_taskmeister_yourclassstats.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
					name="customtext"
					type="textarea"
					label="CustomText"
					description="Input your custom text here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="customheader"
					type="textarea"
					label="CustomHeader"
					description="Input your custom header here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>
                <field
					name="wordstats"
					type="list"
					label="Display Table Stats?"
					description="Display stats in table form as well. "
					default="choice_no"
					>
                    <option value="choice_yes">Yes</option>
					<option value="choice_no">No</option>
				</field>
            </fieldset>
        </fields>
    </config>
</extension>
